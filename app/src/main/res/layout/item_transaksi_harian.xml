<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white"
    app:strokeColor="@color/darkGrey"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Baris Utama: Bulan, Pendapatan, Pengeluaran -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Kiri: Bulan -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="bottom">

                    <!-- Nama Hari -->
                    <TextView
                        android:id="@+id/txt_hari"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:text="Sat"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:layout_marginEnd="2dp"
                        android:textColor="@color/black" />

                    <!-- Tanggal -->
                    <TextView
                        android:id="@+id/txt_tanggalHarian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="17/05/2025"
                        android:textSize="12sp"
                        android:textColor="@color/black" />
                </LinearLayout>
            </LinearLayout>

            <!-- Kanan: Pendapatan & Pengeluaran -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/darkGrey"
                    android:layout_marginHorizontal="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <!-- Pendapatan -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="@color/primaryBlue"
                        app:cardElevation="2dp"
                        android:layout_marginVertical="2dp"
                        android:padding="6dp">

                        <HorizontalScrollView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scrollbars="none"
                            android:paddingStart="0dp"
                            android:paddingEnd="6dp">

                            <TextView
                                android:id="@+id/txt_pendapatanHarian"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rp. 123.456.789.456.123.123.123.123.123,00"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:padding="6dp"
                                android:ellipsize="none"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:focusable="true"
                                android:focusableInTouchMode="true" />
                        </HorizontalScrollView>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Pengeluaran -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="@color/primaryRed"
                        app:cardElevation="2dp"
                        android:layout_marginVertical="2dp"
                        android:padding="6dp">

                        <HorizontalScrollView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scrollbars="none"
                            android:paddingStart="0dp"
                            android:paddingEnd="6dp">

                            <TextView
                                android:id="@+id/txt_pengeluaranHarian"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rp. 123.456.789.456,00"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:padding="6dp"
                                android:ellipsize="none"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:focusable="true"
                                android:focusableInTouchMode="true" />
                        </HorizontalScrollView>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Tabel di bawah konten utama -->
        <TableLayout
            android:id="@+id/table_detail_harian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/darkerWhite"
            android:layout_marginTop="8dp"
            android:stretchColumns="*"
            android:visibility="gone">

            <!-- Header -->
            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Waktu"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:padding="6dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Jenis"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:padding="6dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Media"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:padding="6dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Masuk"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:padding="6dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Keluar"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:padding="6dp" />
            </TableRow>

            <!-- Contoh Baris -->
            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="20:30"
                    android:padding="6dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Makan"
                    android:padding="6dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cash"
                    android:padding="6dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rp. 1.000.000.000.000"
                    android:padding="6dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rp. 200.000.000"
                    android:padding="6dp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>


</com.google.android.material.card.MaterialCardView>