<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Baris atas: Navigasi bulan/tahun & tombol kanan -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp"
        android:weightSum="1">

        <!-- Navigasi bulan-tahun -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start|center_vertical">

            <ImageButton
                android:id="@+id/btn_prev_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Sebelumnya"
                app:srcCompat="@drawable/chevron_left_24px" />

            <TextView
                android:id="@+id/txt_month_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apr 2020"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingHorizontal="8dp" />

            <ImageButton
                android:id="@+id/btn_next_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Berikutnya"
                app:srcCompat="@drawable/chevron_right_24px" />
        </LinearLayout>

        <!-- Tombol Search & Setting -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <ImageButton
                android:id="@+id/btn_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Cari"
                app:srcCompat="@drawable/search_24px" />

            <ImageButton
                android:id="@+id/btn_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Pengaturan"
                android:layout_marginStart="8dp"
                app:srcCompat="@drawable/tune_24px" />
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/button_blue"
        app:tabIndicatorHeight="3dp"
        app:tabTextColor="@color/tab_text_selector"
        app:tabGravity="fill"
        app:tabMode="fixed" />

    <!-- Tambahan: 3 kotak info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <!-- Kartu 1 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/primaryBlue">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="6dp"
                android:gravity="center_vertical">

                <!-- Kiri: Text -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <!-- Nominal (di atas) -->
                        <TextView
                            android:id="@+id/value_pendapatan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10.000.000,00"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:ellipsize="none"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true" />
                    </HorizontalScrollView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white" />

                    <!-- Label (di bawah, kecil) -->
                    <TextView
                        android:id="@+id/label_pendapatan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pendapatan"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:layout_marginTop="0dp" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:background="@color/white" />

                <!-- Kanan: Icon -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/payments_24px"
                    app:tint="@color/white" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Kartu 2 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/primaryRed">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="6dp"
                android:gravity="center_vertical">

                <!-- Kiri: Text -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <!-- Nominal (di atas) -->
                        <TextView
                            android:id="@+id/value_pengeluaran"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="109.945.000.000,00"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:ellipsize="none"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true" />
                    </HorizontalScrollView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white" />

                    <!-- Label (di bawah, kecil) -->
                    <TextView
                        android:id="@+id/label_pengeluaran"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pengeluaran"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:layout_marginTop="0dp" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:background="@color/white" />

                <!-- Kanan: Icon -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/payments_24px"
                    app:tint="@color/white" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Kartu 3 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/darkGrey">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="6dp"
                android:gravity="center_vertical">

                <!-- Kiri: Text -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <!-- Nominal (di atas) -->
                        <TextView
                            android:id="@+id/value_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="900.000.000,00"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:ellipsize="none"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true" />
                    </HorizontalScrollView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white" />

                    <!-- Label (di bawah, kecil) -->
                    <TextView
                        android:id="@+id/label_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:layout_marginTop="0dp" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:background="@color/white" />

                <!-- Kanan: Icon -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/payments_24px"
                    app:tint="@color/white" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/darkGrey"
        android:layout_marginVertical="4dp" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>