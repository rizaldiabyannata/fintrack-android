<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Define the solid color (button background) -->
    <solid android:color="#F5F9FE"/>  <!-- White color for background -->

    <!-- Define the rounded corners -->
    <corners android:radius="16dp"/>  <!-- Rounded corners with 16dp radius -->

    <!-- Define the border (stroke) -->
    <stroke android:color="#3b5998" android:width="2dp"/>  <!-- Facebook blue border -->

    <!-- Define the shadow (elevation for API 21+) -->
    <padding android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp"/>  <!-- Padding to create space between text/icon and the border -->
</shape>
